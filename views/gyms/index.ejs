<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <section>  
    <h1><%= title %> </h1>
    <h2>Find a gym near you</h2>
    <form action="/gyms/search" method="POST">
      <input type="text" name="search" placeholder="Enter a city or ZIP">
      <button type="submit">Search</button>
    </form>
  </section>
  <section>
    <% gyms.forEach(gym => { %>
      <h2><%= gym.gymName %></h2>
      <p><%= gym.city %></p>
      <p><%= gym.state %></p>
      <img src="<%= gym.image %>" alt="">
    <% }) %> 
  </section>
</main>

<%- include('../partials/footer') %>