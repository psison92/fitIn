<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/gyms/index.css">
<%- include('../partials/nav') %>

<main>
  <section>  
    <h1><%= title %> </h1>
    <h2>Find a gym near you</h2>
    <form action="/gyms/search" method="POST">
      <input type="text" name="search" placeholder="Enter a city or ZIP" autocomplete="off">
      <button type="submit">Search</button>
    </form>
  </section>
  <section>
    <div class="cardContainer">
      <% gyms.forEach(gym => { %>
        <a class="text-decoration-none" href="/gyms/<%= gym._id %>">
          <div class="card">
            <img src="<%= gym.image %>" alt="">
              <div class="card-body">
                <h1 class="card-title"><%= gym.gymName %></h1>
              </div>
          </div>
        </a>
      <% }) %>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>